<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.luc_nopre.projet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon_foreground"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".CreationListe"
            android:label="@string/title_activity_creation_liste"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="fr.luc_nopre.projet.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.luc_nopre.projet.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light"/>

        <service android:name=".NotificationService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="fr.luc_nopre.projet.NotificationService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>


</manifest>